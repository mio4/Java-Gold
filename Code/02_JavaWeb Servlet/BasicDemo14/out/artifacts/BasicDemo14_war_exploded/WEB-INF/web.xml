<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <!--Ajax1Servlet-->
    <servlet>
        <servlet-name>Ajax1Servlet</servlet-name>
        <servlet-class>com.mio4.web.servlet.Ajax1Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Ajax1Servlet</servlet-name>
        <url-pattern>/ajax1</url-pattern>
    </servlet-mapping>

    <!--Ajax2Servlet-->
    <servlet>
        <servlet-name>Ajax2Servlet</servlet-name>
        <servlet-class>com.mio4.web.servlet.Ajax2Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Ajax2Servlet</servlet-name>
        <url-pattern>/ajax2</url-pattern>
    </servlet-mapping>
    
    <!--CheckUsername4AjaxServlet 检查用户名是否被占用-->
    <servlet>
        <servlet-name>CheckUsername4AjaxServlet</servlet-name>
        <servlet-class>com.mio4.web.servlet.CheckUsername4AjaxServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckUsername4AjaxServlet</servlet-name>
        <url-pattern>/checkUsername4Ajax</url-pattern>
    </servlet-mapping>

    <!--JQueryAjaxServlet-->
    <servlet>
        <servlet-name>JqueryAjaxServlet</servlet-name>
        <servlet-class>com.mio4.web.servlet.JqueryAjaxServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JqueryAjaxServlet</servlet-name>
        <url-pattern>/jqueryAjax</url-pattern>
    </servlet-mapping>
    
    <!--SearchKwServlet 模拟搜索引擎-->
    <servlet>
        <servlet-name>SearchKwServlet</servlet-name>
        <servlet-class>com.mio4.web.servlet.SearchKwServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchKwServlet</servlet-name>
        <url-pattern>/searchKw</url-pattern>
    </servlet-mapping>
</web-app>