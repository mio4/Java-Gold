<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <!--FindAllServlet 查询所有商品信息的Servlet-->
    <servlet>
        <servlet-name>FindAllServlet</servlet-name>
        <servlet-class>com.mio4.web.servlet.FindAllServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindAllServlet</servlet-name>
        <url-pattern>/findAll</url-pattern>
    </servlet-mapping>
    
    <!--AddProductServlet 向数据库中添加商品的Servlet-->
    <servlet>
        <servlet-name>AddProductServlet</servlet-name>
        <servlet-class>com.mio4.web.servlet.AddProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddProductServlet</servlet-name>
        <url-pattern>/addProduct</url-pattern>
    </servlet-mapping>

    <!--GetProdcutByIdServlet查询商品信息-->
    <servlet>
        <servlet-name>GetProductByIdServlet</servlet-name>
        <servlet-class>com.mio4.web.servlet.GetProductByIdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetProductByIdServlet</servlet-name>
        <url-pattern>/getProductById</url-pattern>
    </servlet-mapping>

    <!--EditProductServlet修改商品信息-->
    <servlet>
        <servlet-name>editProductServlet</servlet-name>
        <servlet-class>com.mio4.web.servlet.EditProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>editProductServlet</servlet-name>
        <url-pattern>/editProduct</url-pattern>
    </servlet-mapping>

    <!--DeleteProductByIdServlet 删除指定商品-->
    <servlet>
        <servlet-name>DeleteProductByIdServlet</servlet-name>
        <servlet-class>com.mio4.web.servlet.DeleteProductByIdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteProductByIdServlet</servlet-name>
        <url-pattern>/deleteProductById</url-pattern>
    </servlet-mapping>

    <!--DelCheckedProductServlet 删除选中的多个指定商品-->
    <servlet>
        <servlet-name>DelCheckedProductServlet</servlet-name>
        <servlet-class>com.mio4.web.servlet.DelCheckedProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DelCheckedProductServlet</servlet-name>
        <url-pattern>/delCheckedProduct</url-pattern>
    </servlet-mapping>
    
    <!--findProductByCondition多条件查询-->
    <servlet>
        <servlet-name>FindProductByCondition</servlet-name>
        <servlet-class>com.mio4.web.servlet.FindProductByConditionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindProductByCondition</servlet-name>
        <url-pattern>/findProductByCondition</url-pattern>
    </servlet-mapping>

    <!--showProductByPage 分页展示商品-->
    <servlet>
        <servlet-name>ShowProductByPage</servlet-name>
        <servlet-class>com.mio4.web.servlet.ShowProductByPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowProductByPage</servlet-name>
        <url-pattern>/showProductByPage</url-pattern>
    </servlet-mapping>

</web-app>