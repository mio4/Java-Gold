<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>CookieServlet</servlet-name>
        <servlet-class>com.mio4.web.CookieServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CookieServlet</servlet-name>
        <url-pattern>/cookie</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RemServlet</servlet-name>
        <servlet-class>com.mio4.web.RemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemServlet</servlet-name>
        <url-pattern>/rem</url-pattern>
    </servlet-mapping>
    
    <!--product servlet-->
    <servlet>
        <servlet-name>ProductServlet</servlet-name>
        <servlet-class>com.mio4.web.ProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductServlet</servlet-name>
        <url-pattern>/productServlet</url-pattern>
    </servlet-mapping>
    
    <!--clearHistory-->
    <servlet>
        <servlet-name>ClearHistory</servlet-name>
        <servlet-class>com.mio4.web.ClearHistory</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClearHistory</servlet-name>
        <url-pattern>/clearHistory</url-pattern>
    </servlet-mapping>
    
    <!--Add2Cart-->
    <servlet>
        <servlet-name>Add2Cart</servlet-name>
        <servlet-class>com.mio4.web.Add2Cart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Add2Cart</servlet-name>
        <url-pattern>/add2Cart</url-pattern>
    </servlet-mapping>
    
    <!--clearCart-->
    <servlet>
        <servlet-name>ClearCart</servlet-name>
        <servlet-class>com.mio4.web.ClearCart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClearCart</servlet-name>
        <url-pattern>/clearCart</url-pattern>
    </servlet-mapping>
</web-app>
